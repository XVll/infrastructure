# Domain Configuration
DOMAIN=homelab.local

# Cloudflare API (for Let's Encrypt DNS challenge)
CF_API_EMAIL=your-email@example.com
CF_DNS_API_TOKEN=your-cloudflare-api-token

# Redis Connection (VM 2)
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Authentik PostgreSQL Connection (VM 2)
AUTHENTIK_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Authentik Secret Key (generate with: openssl rand -base64 60)
AUTHENTIK_SECRET_KEY=CHANGE_ME_LONG_RANDOM_STRING

# SMTP Configuration (optional, for Authentik email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=authentik@homelab.local
