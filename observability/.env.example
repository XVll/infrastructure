# Domain Configuration
DOMAIN=homelab.local

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD
GRAFANA_SECRET_KEY=CHANGE_ME_LONG_RANDOM_STRING  # Generate with: openssl rand -base64 32

# Grafana Database (PostgreSQL on VM2)
GRAFANA_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Authentik OAuth (for Grafana SSO)
AUTHENTIK_CLIENT_ID=your-authentik-client-id
AUTHENTIK_CLIENT_SECRET=your-authentik-client-secret

# SMTP Configuration (optional, for Grafana alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=grafana@homelab.local
