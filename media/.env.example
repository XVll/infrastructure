# Domain Configuration
DOMAIN=homelab.local

# NAS Mount Paths (mount from VM6 via NFS or SMB)
NAS_MEDIA_PATH=/mnt/nas/media
NAS_DOWNLOADS_PATH=/mnt/nas/downloads

# n8n Configuration
N8N_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
N8N_ENCRYPTION_KEY=CHANGE_ME_LONG_RANDOM_STRING  # Generate with: openssl rand -base64 32

# Redis Connection (VM2)
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Paperless-ngx Configuration
PAPERLESS_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# API Keys (generate after initial setup)
SONARR_API_KEY=your-sonarr-api-key
RADARR_API_KEY=your-radarr-api-key
PROWLARR_API_KEY=your-prowlarr-api-key
